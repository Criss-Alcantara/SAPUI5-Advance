<mvc:View controllerName="logaligroup.applists.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m" 
    displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <IconTabBar id="icon_tab">
                            <items>
                                <IconTabFilter id="itb_products" text="{i18n>objectList}">
                                    <List id="l_prod" items="{path : '/Products',
                                                  filters : [{
                                                      path : 'Brand',
                                                      operator : 'EQ',
                                                      value1 : 'Compaq'
                                                  }]}">
                                        <items>
                                            <ObjectListItem id="ob_lis" title="{Material} {Brand} {Model}"
                                                            number="{Price}"
                                                            numberUnit="{Currency}"
                                                            type="Detail">
                                                <ObjectAttribute id="oa_brand" text="{Brand}"/>
                                                <ObjectAttribute id="oa_weight" text="{Weight}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter id="itf_selection" text="{i18n>standardList}">
                                    <Select id="s_select" selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item id="i_none" key="None" text="{i18n>none}"/>
                                            <core:Item id="i_mult" key="MultiSelect" text="{i18n>multiSelect}"/>
                                            <core:Item id="i_sing" key="SingleSelect" text="{i18n>singleSelect}"/>
                                            <core:Item id="i_sing_left" key="SingleSelectLeft" text="{i18n>singleSelectLeft}"/>
                                            <core:Item id="i_sing_mast" key="SingleSelectMaster" text="{i18n>singleSelectMaster}"/>
                                        </items>
                                    </Select>
                                    
                                    <Button id="b_show" text="{i18n>showSelectedItems}" press="onShowSelectedRows" class="sapUiSmallMarginBegin"/>
                                    <Button id="b_delete" text="{i18n>deleteSelectedItems}" press="onDeleteSelectedRows" class="sapUiSmallMarginBegin"/>

                                    <List id="standardList" items="{ path : '/Products',
                                                   sorter: {
                                                       path : 'Brand',
                                                       descending : false,
                                                       group : true
                                                   },
                                                   groupHeaderFactory : '.getGroupHeader'}"
                                            mode="{/typeSelection}">
                                        <items>
                                            <StandardListItem id="sl_info" title="{Material} {Brand} {Model}"
                                                              description="{Weight}"
                                                              info="{Price} {Currency}"
                                                              type="Active"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter id="itf_list1" text="{i18n>inputList}">
                                    <List id="l_prod2" items="{/Products}" mode="Delete" delete="onDeleteRow">
                                        <items>
                                            <InputListItem id="i_brand" label="{Brand}">
                                                <Select id="i_prop" items="{Properties}">
                                                    <core:Item id="i_id" key="{Id}" text="{Text}"/>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter id="itf_notf2" text="{i18n>notificationList}">
                                    <List id="l_news1" items="{/News}">
                                        <items>
                                            <NotificationListItem id="nli_1" title="{Title}"
                                                                  description="{Description}"
                                                                  unread="{Unread}"
                                                                  authorName="{Author}"
                                                                  priority="{Priority}"
                                                                  showCloseButton="{ShowCloseButton}"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter id="itf_list" text="{i18n>customList}">
                                    <List id="l_news2" items="{/News}">
                                        <items>
                                            <CustomListItem id="cli_1" >
                                                <layout:Grid id="la_1" defaultSpan="XL3 L3 M6 S12">
                                                    <Text id="t_title" text="{Title}"/>
                                                    <Text id="t_author" text="{Author}"/>
                                                    <Text id="t_description" text="{Description}"/>
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                            </items>
                        </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
