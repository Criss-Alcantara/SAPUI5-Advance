<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel id="_IDGenPanel1">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1">
                <core:Icon id="_IDGenIcon1" src="{= ${incidenceModel>status}==='0' ? 'accept' :
                                   ${incidenceModel>status}==='1' ? 'alert' :
                                   ${incidenceModel>status}==='2' ? 'decline' : '' }"/>
                <Title id="_IDGenTitle1" text="{i18n>incidence}  {incidenceModel>index} {path : 'incidenceModel>date', formatter:'.Formatter.dateFormat'}"></Title>
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <core:Icon id="_IDGenIcon2" src="delete" press="onDeleteIncidence"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox id="_IDGenHBox1" >
                <VBox id="_IDGenVBox1" class="sapUiSmallMarginEnd">
                    <Text id="_IDGenText1" text="{i18n>incidenceDate}"/>
                    <DatePicker id="_IDGenDatePicker1" dateValue="{incidenceModel>date}"/>
                </VBox>
                
                <VBox id="_IDGenVBox2" visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}" class="sapUiSmallMarginEnd">
                    <Text id="_IDGenText2" text="{i18n>incidenceReason}"/>
                    <Input id="_IDGenInput1"></Input> 
                </VBox>
                <VBox id="_IDGenVBox3" visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}">
                    <Text id="_IDGenText3" text="{i18n>incidenceType}"/>
                    <Select id="_IDGenSelect1" selectedKey="{incidenceModel>status}" forceSelection="false">
                        <core:Item id="_IDGenItem1" key="0" text="{i18n>incidenceCorrect}"/>
                        <core:Item id="_IDGenItem2" key="1" text="{i18n>incidencePending}"/>
                        <core:Item id="_IDGenItem3" key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>