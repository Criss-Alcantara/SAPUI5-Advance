<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar>
                <core:Icon  src="{= ${Inc_Model>status}==='0' ? 'accept' :
                                   ${Inc_Model>status}==='1' ? 'alert' :
                                   ${Inc_Model>status}==='2' ? 'decline' : '' }"/>
                <Title text="{i18n>incidence}  {Inc_Model>index} {path : 'Inc_Model>date', formatter:'.Formatter.dateFormat'}"></Title>
                <ToolbarSpacer />
                <Button  icon="sap-icon://save" press="onSaveIncidence" enabled="{= ${Inc_Model>EnabledSave} === true}"/>
                <core:Icon  src="delete" press="onDeleteIncidence"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox >
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>incidenceDate}" required="true"/>
                    <DatePicker dateValue="{Inc_Model>date}" change="updateIncidenceCreationDate" valueState="{Inc_Model>CreationDateState}"/>
                </VBox>
                
                <VBox  visible="{= ${Inc_Model>date} !== '' &amp;&amp; ${Inc_Model>date} !== undefined}" class="sapUiSmallMarginEnd">
                    <Label text="{i18n>incidenceReason}" required="true"/>
                    <Input value="{Inc_Model>Reason}" change="updateIncidenceReason" valueState="{Inc_Model>ReasonState}"></Input> 
                </VBox>
                <VBox visible="{= ${Inc_Model>date} !== '' &amp;&amp; ${Inc_Model>date} !== undefined}">
                    <Text text="{i18n>incidenceType}"/>
                    <Select selectedKey="{Inc_Model>status}" forceSelection="false">
                        <core:Item key="0" text="{i18n>incidenceCorrect}"/>
                        <core:Item key="1" text="{i18n>incidencePending}"/>
                        <core:Item key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>