<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel id="_IDGenPanel1">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1">
                <core:Icon id="_IDGenIcon1" src="{= ${Inc_Model>status}==='0' ? 'accept' :
                                   ${Inc_Model>status}==='1' ? 'alert' :
                                   ${Inc_Model>status}==='2' ? 'decline' : '' }"/>
                <Title id="_IDGenTitle1" text="{i18n>incidence}  {Inc_Model>index} {path : 'Inc_Model>date', formatter:'.Formatter.dateFormat'}"></Title>
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Button id="_IDGenButton1" icon="sap-icon://save" press="onSaveIncidence" enabled="{= ${Inc_Model>EnabledSave} === true}"/>
                <core:Icon id="_IDGenIcon2" src="delete" press="onDeleteIncidence"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox id="_IDGenHBox1" >
                <VBox id="_IDGenVBox1" class="sapUiSmallMarginEnd">
                    <Label id="_IDGenText1" text="{i18n>incidenceDate}" required="true"/>
                    <DatePicker id="_IDGenDatePicker1" dateValue="{Inc_Model>date}" change="updateIncidenceCreationDate" valueState="{Inc_Model>CreationDateState}"/>
                </VBox>
                
                <VBox id="_IDGenVBox2" visible="{= ${Inc_Model>date} !== '' &amp;&amp; ${Inc_Model>date} !== undefined}" class="sapUiSmallMarginEnd">
                    <Label id="_IDGenText2" text="{i18n>incidenceReason}" required="true"/>
                    <Input id="_IDGenInput1" value="{Inc_Model>Reason}" change="updateIncidenceReason" valueState="{Inc_Model>ReasonState}"></Input> 
                </VBox>
                <VBox id="_IDGenVBox3" visible="{= ${Inc_Model>date} !== '' &amp;&amp; ${Inc_Model>date} !== undefined}">
                    <Text id="_IDGenText3" text="{i18n>incidenceType}"/>
                    <Select id="_IDGenSelect1" selectedKey="{Inc_Model>status}" forceSelection="false">
                        <core:Item id="_IDGenItem1" key="0" text="{i18n>incidenceCorrect}"/>
                        <core:Item id="_IDGenItem2" key="1" text="{i18n>incidencePending}"/>
                        <core:Item id="_IDGenItem3" key="2" text="{i18n>incidenceError}"/>
                    </Select>
                </VBox>
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>